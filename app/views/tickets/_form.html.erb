<%=form_for [@project,@ticket],:html=>{ :multipart => true } do |f| %>
       <%=f.error_messages%>
       <div id="form_for_ticket">
         
         <div class="label_cell">
           <%=f.label :title,'Ticket title'%>
	     </div>
	  
	     <div class="input_cell">
	  	    <%=f.text_field :title%>
         </div> 
           
         <div class="label_cell">
            <%=f.label :description%>
	     </div>
	  
	     <div class="input_cell">
	  	     <%=f.text_area :description%>
         </div> 
           

         <div id="static_files"> 
          
           <%number=0%>
          
           <%=render :partial => "static_files/file_fields",
                     :locals  => { :number=>number } # Viene passato @ticket ? 
            %>
            
            
            <!--Eliminato 
            	       :new_static_file_path,
                       :remote=>true,
                       :update=>"static_files",
                       :position=>"after"  -->
                       
            
            <%=link_to "Add another file",
                       'javascript:',
                       :id=>"add_another_file"
                                         
            %> 
         
         </div>  
            
          <div>
              <%=f.submit :class=>"formButton"%>
          </div> 
       </div> 
<%end%>
